
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
model Post {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  pic         String
  likeCount   Int
  createdBy   Int       
  user        User      @relation(fields: [createdBy], references: [id])
  tags        PostTag[] 
  likedBy     PostLike[] //пользователи, которые лайкнули
  
}

model Tag {
  id     Int      @id @default(autoincrement())
  name   String @unique
  posts  PostTag[]
}
model User {
  id Int @id @default(autoincrement())
  firstName String
  secondName String
  email String @unique
  avatar String 
  password String 
  isAdmin Boolean @default(false)
  createdPosts Post[]
  likedPosts PostLike[] // лайкнутые посты 
}

model PostTag {
  postId Int
  tagId  Int

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([postId, tagId])
}

model PostLike {
  userId Int
  postId Int

  user   User @relation(fields: [userId], references: [id])
  post   Post @relation(fields: [postId], references: [id])

  @@id([userId, postId]) 
}
