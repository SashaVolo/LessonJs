generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
model Post {
  id          Int @unique @id @default(autoincrement())
  name        String
  description String
  pic         String
  likeCount   Int
  tags        PostTag[]   //один пост має багато зв’язків у PostTag
}

model Tag {
  id     Int @unique @id @default(autoincrement())
  name   String
  posts  PostTag[]   //один тег має багато зв’язків у PostTag
}

model PostTag {
  id      Int @unique @id @default(autoincrement())

  // зв’язок з Post
  post    Post  @relation(fields: [postId], references: [id])
  postId  Int
  // зв’язок з Tag
  tag     Tag   @relation(fields: [tagId], references: [id])
  tagId   Int
}

